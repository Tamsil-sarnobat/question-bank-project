<% layout("/layouts/boilerplate")-%>

<div class="col-6 offset-3 mt-3">
    <h3>Empower Learning: Edit Your Task</h3>
</div>
<div class="col-6 offset-3 mt-5 mb-3">
<form  action ="/semester/task/<%=task._id%>?_method=PUT" class="needs-validation" method="POST" novalidate>

  <div class="mb-3">
    <label for="title" class="form-label">Title Of your task</label>
    <input type="text" class="form-control" id="title" name="title" value="<%= task.title %>" aria-describedby="userHelp" required>
    <div class="invalid-feedback">Title is required.</div>
  </div>

  <div class="mb-3">
      <label for="description" class="form-label">Description Of Task</label>
      <textarea name="description" class="form-control" required><%= task.description %></textarea>
      <div class="invalid-feedback">description is required.</div>
    </div>

    
  <div class="mb-5">
  <select class="form-select" name="semester" aria-label="Which Semester Should Receive This Task?" required>
        <option selected value="<%= task.semester%>"><%= task.semester %></option>
        <option value="sem1">Semester-1</option>
        <option value="sem2">Semester-2</option>
        <option value="sem3">Semester-3</option>
        <option value="sem4">Semester-4</option>
        <option value="sem5">Semester-5</option>
        <option value="sem6">Semester-6</option>        
  </select>
  </div>

  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>
