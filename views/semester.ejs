<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Semesters</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/semester.css" />
  </head>
  <body>
    <!--navbar-->
    <main>
      <div class="conatiner py-5">
        <h1 class="sem-title text-center fw-bold mb-5">
          Semester-<%= semId %>
        </h1>

        <div class="subject-container row justify-content-center g-4">
          <% subjects.slice(0, 3).forEach(subject => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="subject text-center mx-auto">
              <h5 class="subject-title fw-semibold mb-2"><%= subject.name %></h5>
              <a href="#" class="q-link mb-0">View Questions</a>
            </div>
          </div>
          <% }) %>
        </div>

        <div class="subject-container d-flex flex-wrap row justify-content-center g-4 mt-2">
          <% subjects.slice(3).forEach(subject => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="subject text-center">
              <h5 class="subject-title fw-semibold mb-2"><%= subject.name %></h5>
              <a href="#" class="q-link mb-0">View Questions</a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
    <!--Footer-->
  </body>
</html>
