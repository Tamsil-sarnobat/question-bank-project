<% layout("layouts/boilerplate") %>

<div class="full-width-wrapper">
<main class="container-fluid mb-4 ">
  <ul class="nav justify-content-center bg-body-secondary flex-wrap">
    <li class="nav-item">
      <a class="nav-link" href="/semester/newQues">Suggest Question</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="/semester/newQuePage">Student Contribution</a>
    </li>


    <li class="nav-item">
      <a class="nav-link" href="/question-papers/semester/<%= semId %>/upload">Upload Question Paper</a>
    </li>
  </ul>



    <h1 class="sem-title text-center fw-bold  mt-3">Semester-<%= semId %></h1>

    <div class="subject-container row justify-content-center g-4 ">
      <%  Subjects.slice(0, 3).forEach(subject => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="subject text-center mx-auto">
          <h5 class="subject-title fw-semibold mb-2"><%= subject.name %></h5>
          <a href="#" class="q-link mb-0">View Questions</a>
        </div>
      </div>
      <% }) %>
    </div>

    <div
      class="subject-container d-flex flex-wrap row justify-content-center g-4 mt-2"
    >
      <% Subjects.slice(3).forEach(subject => { %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="subject text-center">
          <h5 class="subject-title fw-semibold mb-2"><%= subject.name %></h5>
          <a href="#" class="q-link mb-0">View Questions</a>
        </div>
      </div>
      <% }) %>
    </div>
</main>
</div>
